{
  "name": "pomodoro-timer",
  "version": "1.0.6",
  "description": "A Pomodoro timer application.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Ioannis",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.example.pomodorotimer",
    "productName": "Pomodoro Timer",
    "files": [
      "index.html",
      "main.js",
      "script.js",
      "style.css",
      "bell.mp3",
      "bubble.mp3",
      "nyan-cat.gif",
      "nyan-cat-2.gif",
      "nyan-cat-3.gif",
      "nyan-cat-4.gif",
      "nyan-cat-5.gif",
      "icon.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}